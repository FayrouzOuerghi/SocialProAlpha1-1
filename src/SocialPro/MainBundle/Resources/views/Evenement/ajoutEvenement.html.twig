

{% extends 'base.html.twig' %}

{% block body %}
    <link rel="stylesheet" href="{{ asset('Espoir/css/style.css') }}">
    <script type="text/javascript" src="{{ asset('Espoir/js/jquery.js') }}"></script>
    <script type="text/javascript" src="{{ asset('Espoir/js/script.js') }}"></script>
    <script type="text/javascript" src=""></script>
    <style type="text/css">
        .div {
            /* Pour le centrer dans la page */
            margin: 0 auto;
            width: 800px;
            /* Pour voir les limites du formulaire */
            padding: 1em;
            border: 1px solid #CCC;
            border-radius: 1em;
            background-color:#F5F5F5;

            -moz-box-shadow: 30px 25px 29px 0px rgba(0,0,0,0.75);
            box-shadow: 30px 25px 29px 0px rgba(0,0,0,0.75);
        }
        .deuxvaleurs {
            border-spacing: 5px 10px;
        }
        .label {
            /* Afin de s'assurer que toutes les étiquettes aient la même dimension et soient alignées correctement */
            display: inline-block;
            width: 100px;
            text-align: right;
        }

    </style>
    <center>
        <h1>Ajouter Un Evenement</h1>
        {{ form_start(form) }}
        <div class="div">
            <table  class="deuxvaleurs">
                <tr><td class="label">Nom :</td>
                    <td>{{ form_widget(form.nom) }}</td><td class="label">Lieu:</td> <td>{{ form_widget(form.lieu) }}</td>
                </tr>
                <tr><td class="label">Description :</td>
                    <td>{{ form_widget(form.description) }}</td>
                </tr>
                <tr><td class="label">Theme :</td>
                    <td>{{ form_widget(form.theme) }}</td>
                </tr>

                <tr><td class="label">Date de début:</td>
                    <td>{{ form_widget(form.dateDebut) }}</td><td class="label">Date fin:</td> <td>{{ form_widget(form.dateFin) }}</td>
                </tr>

                <tr style="display: none"><td class="label">Date :</td>
                    <td>{{ form_widget(form.date) }}</td>
                </tr>
                <tr  style="display: none"  >
                    <td align="center">L'utilisateur: </td>
                    <td align="center"> {{app.user.username}} </td>
                </tr>
            </table>
            <p>{{ form_widget(form.ajouter) }}</p>

        </div>

        {{ form_end(form) }}
    </center>
{% endblock %}